{
  "name": "synth_quantile_q05",
  "description": "Synthetic quantile test (alpha=0.05)",
  "input_data": "/Volumes/Extreme SSD/trading_data/cex/tests/synth.csv",
  "output_dir": "/Volumes/Extreme SSD/trading_data/cex/models/tests",
  "features": "all",
  "target": {
    "variable": "y_logret_24h",
    "objective": { "name": "quantile", "params": { "alpha": 0.05 } }
  },
  "split": {
    "method": "time_series",
    "train_ratio": 0.7,
    "val_ratio": 0.15,
    "test_ratio": 0.15
  },
  "model": {
    "type": "lgbm",
    "hyperparameter_tuning_method": "grid",
    "hyperparameter_search_space": {
      "learning_rate": [0.05, 0.1],
      "num_leaves": [31],
      "max_depth": [6]
    },
    "params": {
      "learning_rate": 0.1,
      "num_leaves": 31,
      "max_depth": 6,
      "min_data_in_leaf": 20,
      "feature_fraction": 1.0,
      "bagging_fraction": 1.0,
      "bagging_freq": 1,
      "lambda_l1": 0.0,
      "lambda_l2": 0.0,
      "num_boost_round": 200,
      "early_stopping_rounds": 20,
      "seed": 42
    },
    "eval_metrics": ["pinball_loss"]
  }
}



