      "num_leaves": 31,
      "max_depth": 6,
      "min_data_in_leaf": 100,
      "feature_fraction": 0.9,
      "bagging_fraction": 0.9,
      "bagging_freq": 5,
      "lambda_l1": 0.0,
      "lambda_l2": 0.0,
      "num_boost_round": 1000,
      "early_stopping_rounds": 100,
      "seed": 42
    },
    "eval_metrics": ["pinball_loss"]
  }
